<!DOCTYPE>
<html>
    <head>
        <meta charset="utf-8">
        <title>Forum - Login</title>

        <link href="/client/css/bootstrap.min.css" type="text/css" rel="stylesheet">

        <script src="/common/log.js" type="text/javascript"></script>
        <script src="/common/util/validation-util.js" type="text/javascript"></script>
        <script src="/client/js/util/ClientUtil.js" type="text/javascript"></script>
        <script src="/client/js/User.js" type="text/javascript"></script>
    </head>
    <body>
        <div class="container">
            <div class="row">
                <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
                    <div class="card card-signin my-5">
                        <div class="card-body">
                            <h5 class="card-title text-center">Sign In</h5>
                            <form class="form-signin" id="login-form">
                                {{#if error}}
                                    <div class="text-white bg-danger mb-3 text-center p-1">{{error}}</div>
                                {{/if}}
                                <div class="form-label-group mb-3">
                                    <label for="user-mail">Email ID</label>
                                    <input type="email" id="email" name="email" class="form-control" placeholder="Email ID" required autofocus>
                                </div>
                                <div class="form-label-group mb-3">
                                    <label for="user-password">Password</label>
                                    <input type="password" id="password" name="password" class="form-control" placeholder="Password" required>                                    
                                </div>
                                <button class="btn btn-lg btn-primary btn-block text-uppercase mb-5" onclick="loginUser();" type="button">Sign in</button>
                                <a class="float-right" href="/register">New User?</a>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>        
    </body>
</html>